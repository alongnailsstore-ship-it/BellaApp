<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BellaLink.App.ViewModels"
             x:Class="BellaLink.App.Views.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="20" 
                             Padding="30, 50" 
                             VerticalOptions="Center">

            <Label Text="BellaLink"
                   FontSize="36"
                   TextColor="#FF4081"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Sua beleza conectada"
                   FontSize="16"
                   TextColor="#999"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,30" />

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#F9F9F9" HeightRequest="55">
                <Entry Placeholder="E-mail"
                       Keyboard="Email"
                       Text="{Binding Email}"
                       TextColor="#333"
                       PlaceholderColor="#999"
                       Margin="15,0"
                       VerticalOptions="Center" />
            </Border>

            <Border Stroke="#E0E0E0" StrokeThickness="1" StrokeShape="RoundRectangle 10" BackgroundColor="#F9F9F9" HeightRequest="55">
                <Grid ColumnDefinitions="*, 50">
                    <Entry Grid.Column="0"
                           Placeholder="Senha"
                           IsPassword="{Binding IsPasswordHidden}"
                           Text="{Binding Password}"
                           TextColor="#333"
                           PlaceholderColor="#999"
                           Margin="15,0"
                           VerticalOptions="Center" />

                    <Button Grid.Column="1"
                            Text="{Binding PasswordIcon}"
                            Command="{Binding TogglePasswordCommand}"
                            BackgroundColor="Transparent"
                            TextColor="#666"
                            FontSize="18"
                            Padding="0"
                            HeightRequest="55"
                            WidthRequest="50" />
                </Grid>
            </Border>

            <Grid ColumnDefinitions="Auto, *" Margin="0, -10, 0, 0">
                <HorizontalStackLayout Grid.Column="0" Spacing="5" VerticalOptions="Center">
                    <CheckBox IsChecked="{Binding RememberMe}" Color="#FF4081" />
                    <Label Text="Lembrar-me" TextColor="#666" VerticalOptions="Center" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ToggleRememberMeCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>

                <Label Grid.Column="1" 
                       Text="Esqueci a senha" 
                       TextColor="#FF4081" 
                       FontSize="14"
                       HorizontalOptions="End" 
                       VerticalOptions="Center"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <Button Text="ENTRAR"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#FF4081"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="16"
                    HeightRequest="55"
                    CornerRadius="10"
                    Margin="0, 20, 0, 10"
                    Shadow="{Shadow Brush=Black, Offset='0,4', Opacity=0.2}" />

            <Grid ColumnDefinitions="*, Auto, *" Margin="0, 10">
                <BoxView Grid.Column="0" HeightRequest="1" Color="#E0E0E0" VerticalOptions="Center" />
                <Label Grid.Column="1" Text="ou" TextColor="#999" Margin="10,0" VerticalOptions="Center" />
                <BoxView Grid.Column="2" HeightRequest="1" Color="#E0E0E0" VerticalOptions="Center" />
            </Grid>

            <Button Text="Continuar com Google"
                    Command="{Binding GoogleLoginCommand}"
                    BackgroundColor="White"
                    TextColor="#333"
                    BorderColor="#E0E0E0"
                    BorderWidth="1"
                    FontAttributes="Bold"
                    HeightRequest="55"
                    CornerRadius="10" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0, 20, 0, 0">
                <Label Text="NÃ£o tem uma conta?" TextColor="#666" />
                <Label Text="Cadastre-se" 
                       TextColor="#FF4081" 
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>

            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="{Binding HasError}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
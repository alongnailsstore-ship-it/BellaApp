                         BackgroundColor="Transparent"
                         HeightRequest="50" WidthRequest="50"
                         HorizontalOptions="Center" VerticalOptions="Center"/>

            <Grid Grid.Column="1" ColumnDefinitions="Auto, *" BackgroundColor="Transparent">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToProfileCommand}" />
                </Grid.GestureRecognizers>

                <Border StrokeShape="RoundRectangle 25" HeightRequest="50" WidthRequest="50" StrokeThickness="0" Margin="10,0">
                    <Image Source="{Binding LogoUrl}" Aspect="AspectFill"/>
                </Border>

                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="0">
                    <Label Text="{Binding StoreName}" FontAttributes="Bold" TextColor="#2C3E50" FontSize="16"/>
                    <Label Text="Distribuidor" TextColor="#7F8C8D" FontSize="12"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>

        <ScrollView Grid.Row="1" Padding="20">
            <VerticalStackLayout Spacing="15">

                <Grid ColumnDefinitions="*, *" ColumnSpacing="15">
                    <Border BackgroundColor="#27AE60" StrokeShape="RoundRectangle 10" Padding="15" StrokeThickness="0">
                        <VerticalStackLayout>
                            <Label Text="Produtos Ativos" TextColor="#A9DFBF" FontSize="12"/>
                            <Label Text="{Binding ActiveProductsCount}" TextColor="White" FontAttributes="Bold" FontSize="24"/>
                        </VerticalStackLayout>
                    </Border>

                    <Border BackgroundColor="#2980B9" StrokeShape="RoundRectangle 10" Padding="15" StrokeThickness="0">
                        <VerticalStackLayout>
                            <Label Text="Faturamento" TextColor="#BDC3C7" FontSize="12"/>
                            <Label Text="{Binding MonthRevenue, StringFormat='R$ {0:F2}'}" TextColor="White" FontAttributes="Bold" FontSize="24"/>
                        </VerticalStackLayout>
                    </Border>
                </Grid>


<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BellaLink.App.ViewModels.DistributorViewModels"
             x:Class="BellaLink.App.Views.DistributorViews.DistributorDashboardPage"
             Title="Painel do Distribuidor"
             BackgroundColor="#F5F7FA"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="80, *">

        <Grid Grid.Row="0" ColumnDefinitions="60, *" BackgroundColor="White" Padding="10">

            <ImageButton Grid.Column="0" 
                         Command="{Binding GoBackCommand}"

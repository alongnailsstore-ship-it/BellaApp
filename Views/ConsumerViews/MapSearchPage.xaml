             Title="Explorar no Mapa"
             Shell.NavBarIsVisible="False">

    <Grid>
        <maps:Map x:Name="PartnersMap" IsShowingUser="True" />

        <ImageButton Command="{Binding GoBackCommand}" 
                     Source="{FontImageSource Glyph='â¬…', Color='#333', Size=30}" 
